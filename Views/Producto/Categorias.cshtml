@model List<Categoria>


<h1>Lista de Categorias</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>NombreCategoria</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NombreCategoria</td>
            
            <td>
                
                <a href="/producto/editarcategoria/@item.Id" class="btn btn-secondary">Editar</a>

                <form action="/producto/borrarcategoria" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button class="btn btn-danger">Borrar</button>
                </form>
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron categorias </td>
        </tr>
    }
</table>

