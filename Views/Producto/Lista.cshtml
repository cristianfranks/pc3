@model List<Producto>
<h1> Lista de Productos registrados en la Base de Datos</h1>

@if (Model.Count == 0) {
    <div class="alert alert-warning text-center"> Aun no hay Productos registrados. </div>
} else {
    
    <ol>
    @foreach (var p in Model) {
        <li class="d-flex">
           
            <div>@p.NombreProducto</div>
             <div><img src="@p.Foto"/></div>
            <div>@p.Descripcion</div>
            <div>@p.Precio</div>
            <div>@p.Celular</div>
            <div>@p.LugarCompra</div>
            <div>@p.NombreComprador</div>
            <div>@p.Categoria</div>
        </li> 
    }
    </ol>
}